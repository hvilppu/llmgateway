{
  "AzureOpenAI": {
    "Endpoint": "https://YOUR-RESOURCE-NAME.openai.azure.com/",
    "ApiKey": "YOUR-API-KEY",
    "DeploymentName": "YOUR-DEPLOYMENT-NAME",
    "ApiVersion": "2024-02-15-preview",
    "TimeoutMs": 15000,
    "MaxRetries": 2,
    "RetryDelayMs": 500
  },
  "CircuitBreaker": {
    "FailureThreshold": 5,
    "BreakDurationSeconds": 30
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}